<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.effect.Glow?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<StackPane fx:id="rootPane" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.batallanavalfpoe.controller.WelcomeController">
   <children>
      <ImageView fitHeight="400" fitWidth="600" preserveRatio="false">
         <image>
            <Image url="@images/background.gif" />
         </image>
      </ImageView>
      <VBox alignment="CENTER" prefHeight="400.0" prefWidth="600.0">
         <children>
            <Text fx:id="welcomeText" fill="#1c1b1b" strokeType="OUTSIDE" strokeWidth="0.0" style="-fx-fill: black; -fx-stroke-width: 2px; -fx-stroke: yellow;" text="Batalla eSTElaR">
               <font>
                  <Font name="Star Jedi Logo MonoLine" size="42.0" />
               </font>
               <effect>
                  <Glow level="1.0" />
               </effect>
            </Text>
            <Button mnemonicParsing="false" onAction="#goToCharacterSelector" prefHeight="30.0" prefWidth="290.0" style="-fx-border-color: white; -fx-border-radius: 10; -fx-background-color: transparent;" text="juGaR" textFill="WHITE">
               <VBox.margin>
                  <Insets bottom="10.0" top="50.0" />
               </VBox.margin>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
               <font>
                  <Font name="Star Jedi Logo MonoLine" size="14.0" />
               </font>
               <effect>
                  <Glow level="1.0" />
               </effect>
            </Button>
            <Button mnemonicParsing="false" onAction="#handleClickContinue" prefHeight="30.0" prefWidth="290.0" style="-fx-background-color: transparent; -fx-border-radius: 10; -fx-border-color: white;" text="continuar" textFill="WHITE">
               <VBox.margin>
                  <Insets bottom="10.0" top="10.0" />
               </VBox.margin>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
               <font>
                  <Font name="Star Jedi Logo MonoLine" size="14.0" />
               </font>
               <effect>
                  <Glow level="1.0" />
               </effect>
            </Button>
            <Button mnemonicParsing="false" onAction="#goToRules" prefHeight="30.0" prefWidth="290.0" style="-fx-background-color: transparent; -fx-border-radius: 10; -fx-border-color: white;" text="reglas" textFill="WHITE">
               <VBox.margin>
                  <Insets bottom="20.0" top="10.0" />
               </VBox.margin>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
               <font>
                  <Font name="Star Jedi Logo MonoLine" size="14.0" />
               </font>
               <effect>
                  <Glow level="1.0" />
               </effect>
            </Button>
         </children>
      </VBox>
   </children>
</StackPane>
