<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.batallanavalfpoe.controller.CharacterSelectorController">
   <children>
      <BorderPane prefHeight="200.0" prefWidth="200.0">
         <center>
            <ImageView fx:id="imageView" fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" BorderPane.alignment="CENTER" />
         </center>
         <right>
            <Button fx:id="nextButton" mnemonicParsing="false" onAction="#nextImage" prefHeight="140.0" prefWidth="38.0" style="-fx-background-color: transparent; -fx-border-width: 1.5px; -fx-border-color: black;" text="-&gt;" BorderPane.alignment="CENTER">
               <BorderPane.margin>
                  <Insets right="60.0" />
               </BorderPane.margin>
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </Button>
         </right>
         <left>
            <Button fx:id="previousButton" alignment="CENTER" mnemonicParsing="false" onAction="#previousImage" prefHeight="140.0" prefWidth="38.0" style="-fx-background-color: transparent; -fx-border-width: 1.5px; -fx-border-color: black;" text="&lt;-" BorderPane.alignment="CENTER">
               <BorderPane.margin>
                  <Insets left="60.0" />
               </BorderPane.margin>
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </Button>
         </left>
      </BorderPane>

      <HBox alignment="CENTER" prefHeight="26.0" prefWidth="600.0">
         <children>
            <TextField fx:id="textField" alignment="CENTER" prefHeight="26.0" prefWidth="194.0" style="-fx-background-color: transparent; -fx-border-width: 0 0 1.5 0; -fx-border-color: black;">
               <font>
                  <Font name="Star Jedi Logo MonoLine" size="14.0" />
               </font>
               <cursor>
                  <Cursor fx:constant="TEXT" />
               </cursor></TextField>
         </children>
      </HBox>

      <Label fx:id="emptyNameLabel" text="El nombre no puede estar vacio" visible="false">
         <font>
            <Font name="System Bold" size="14.0" />
         </font>
         <padding>
            <Insets top="10.0" />
         </padding></Label>

      <Button mnemonicParsing="false" onAction="#playButton" style="-fx-background-color: transparent; -fx-border-color: black;" text="Seleccionar">
         <VBox.margin>
            <Insets bottom="10.0" top="20.0" />
         </VBox.margin>
         <font>
            <Font name="Star Jedi Logo MonoLine" size="14.0" />
         </font>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </Button>
      <Button mnemonicParsing="false" onAction="#welcomeStage" style="-fx-background-color: transparent; -fx-border-color: black;" text="volveR al inicio">
         <VBox.margin>
            <Insets bottom="10.0" top="10.0" />
         </VBox.margin>
         <font>
            <Font name="Star Jedi Logo MonoLine" size="14.0" />
         </font>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </Button>
   </children>
</VBox>
